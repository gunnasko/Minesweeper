<Window x:Class="Minesweeper.HighScoreWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper"
        mc:Ignorable="d"
        Title="HighScoreWindow" SizeToContent="WidthAndHeight">
    <Grid>
        <Label Content="High Scores" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <StackPanel Orientation="Horizontal" Margin="0,36,0,35">
            <local:HighScoreTopTenControl x:Name="beginnerTopTen" DifficultyName="Beginner"></local:HighScoreTopTenControl>
            <local:HighScoreTopTenControl x:Name="intermediateTopTen" DifficultyName="Intermediate"/>
            <local:HighScoreTopTenControl x:Name="expertTopTen" DifficultyName="Expert"></local:HighScoreTopTenControl>

        </StackPanel>
        <Button x:Name="closeButton" Content="Close" HorizontalAlignment="Left" Margin="10,0,0,10" VerticalAlignment="Bottom" Width="75" Click="CloseButton_Click"/>

    </Grid>
</Window>
