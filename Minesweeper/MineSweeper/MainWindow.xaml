<Window x:Class="Minesweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="WidthAndHeight">

    <Grid MinWidth="400">
        <Grid x:Name="boardGrid" HorizontalAlignment="Left" Margin="10,39,10,10" VerticalAlignment="Top" Height="Auto" Width="Auto"/>
        <Button x:Name="RestartButton" Content="Restart Game" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="94" Click="RestartButton_Click"/>
        <TextBox x:Name="StatusTextBox" Height="23" Margin="0,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" HorizontalAlignment="Right"/>
        <Button x:Name="settingsButton" Content="Settings" HorizontalAlignment="Right" Margin="0,10,140,0" VerticalAlignment="Top" Width="75" Click="SettingsButton_Click"/>

    </Grid>
</Window>
